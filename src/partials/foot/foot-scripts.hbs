{{!-- detect IE - https://codepen.io/gapcode/pen/vEJNZN  --}}
<script>
	var ua = window.navigator.userAgent;
	var _BB_msie = ua.indexOf('MSIE ');
	var _BB_trident = ua.indexOf('Trident/');

	function getParameterByName(name) {
	    name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
	    var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
	        results = regex.exec(location.search);
	    return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
	}

	var debugQS = getParameterByName('debug');
	var script = document.createElement('script');
	script.type = 'text/javascript';
	script.src = '/_scripts/scripts.min.js';

	if (debugQS && debugQS.length > 0) {
		if (debugQS === 'true') {
			if (_BB_msie > 0 || _BB_trident > 0) {
				script.src = '/_scripts/scripts.es5.js';
			} else {
				script.src = '/_scripts/scripts.js';
			}
		}
	}

	document.body.appendChild(script);
</script>

